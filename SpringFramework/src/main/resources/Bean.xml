<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xmlns:aop="http://www.springframework.org/schema/aop"

	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd

		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">



<bean id = "emp" class="com.thanu.Employee" scope="singleton">


		<property name="id" value="101"></property> <!-- getter injection partially injection -->

		<property name="name" value="Rahul"></property>

		<property name="cmp" value="Dell"></property>
		<property name="adrAddress" ref="adr"></property> 
</bean>


<bean id = "emp1" class="com.thanu.Employee">

		<constructor-arg name = "id" value="201"></constructor-arg> <!-- constructor injection(full agrument injection) -->

		<constructor-arg name = "name" value="SKY"></constructor-arg>

		<constructor-arg name = "cmp" value="BCCI"></constructor-arg>

		<constructor-arg name = "adrAddress" ref = "adr1"></constructor-arg>
</bean>



<bean id = "adr" class="com.thanu.Address" autowire="default">

		<property name="city" value="Pune"></property>
		<property name="state" value="MH"></property>
		<property name="pinCode" value="560059"></property>
</bean>

<bean id = "adr1" class="com.thanu.Address">

		<constructor-arg name = "city" value="Mumbai"></constructor-arg>
		<constructor-arg name = "state" value="MH"></constructor-arg>
		<constructor-arg name = "pinCode" value="560015"></constructor-arg>
		
</bean>





</beans>


